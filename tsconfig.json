{
  "compilerOptions": {
    "module": "commonjs",
    "target": "es6",
    "strict": true,
    "noImplicitAny": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": true,
    "sourceMap": true,
    "plugins": [
      { "name": "tslint-language-service"}
    ],
    "baseUrl": ".",
    "paths": {
      "@generated/io-api/*": [ "generated/io-api/*" ],
      "@generated/notifications/*": [ "generated/notifications/*" ],
      "@generated/pagopa/*": [ "generated/pagopa/*" ],
      "@generated/pagopa-proxy/*": [ "generated/pagopa-proxy/*" ],
      "@generated/public/*": [ "generated/public/*" ],
      "@generated/backend/*": [ "generated/backend/*" ]
    }
  },
  "include": [
    "./src/**/*"
  ],
  "exclude": [
    "node_modules"
  ]
}
